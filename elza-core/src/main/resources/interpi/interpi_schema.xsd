<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.interpi.cz" xmlns="http://www.interpi.cz" elementFormDefault="qualified" attributeFormDefault="unqualified">
  <xs:annotation>
    <xs:documentation>
    INTERPI – Interoperabilita v paměťových institucích
    Projekt financován z Programu aplikovaného výzkumu a vývoje národní a kulturní identity (NAKI) (DF11P01OVV023)
    Verze: 2.2
    </xs:documentation>
  </xs:annotation>

<!-- hlavní prvek pro koleci -->
  <xs:element name="set" type="setTyp">
    <xs:annotation>
      <xs:documentation>Hlavní prvek struktury. Obsahuje soubor záznamů entit.</xs:documentation>
    </xs:annotation>
  </xs:element>
  <xs:complexType name="setTyp">
    <xs:annotation>
      <xs:documentation>Komplexní typ pro hlavní prvek struktury. Může obsahovat jeden nebo více záznamů entit.</xs:documentation>
    </xs:annotation>
    <xs:sequence maxOccurs="unbounded" minOccurs="1">
      <xs:element name="entita" type="entitaTyp"/>
    </xs:sequence>
  </xs:complexType>

<!-- hlavní prvek pro entitu -->
  <xs:element name="entita" type="entitaTyp">
    <xs:annotation>
      <xs:documentation>Hlavní prvek popisu jedné entity.</xs:documentation>
    </xs:annotation>
  </xs:element>

  <xs:complexType mixed="true" name="entitaTyp">
    <xs:annotation>
      <xs:documentation>Komplexní typ pre popis jedné entity, obsahuje přímo základní identifikaci entity.</xs:documentation>
    </xs:annotation>
    <xs:sequence maxOccurs="1" minOccurs="1">
      <xs:element maxOccurs="1" minOccurs="1" name="trida" type="tridaTyp"/>
      <xs:element maxOccurs="1" minOccurs="1" name="podtrida" type="podtridaTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="1" name="identifikace" type="identifikaceTyp"/>
      <xs:element maxOccurs="1" minOccurs="1" name="zaznam" type="zaznamTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="1" name="preferovane_oznaceni" type="oznaceniTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="variantni_oznaceni" type="oznaceniTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="udalost" type="udalostTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="pocatek_existence" type="udalostTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="konec_existence" type="udalostTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="zmena" type="udalostTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="popis" type="popisTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="souradnice" type="souradniceTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="titul" type="titulTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="kodovane_udaje" type="kodovaneTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="souvisejici_entita" type="souvisejiciTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="hierarchicka_struktura" type="strukturaTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="zarazeni" type="zarazeniTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="vyobrazeni" type="vyobrazeniTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="zdroj_informaci" type="zdrojTyp"/>
    </xs:sequence>
  </xs:complexType>

<!-- třída-->
  <xs:simpleType name="tridaTyp">
    <xs:annotation>
      <xs:documentation>Každá entita musí být zařazená do třídy.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
        <xs:enumeration value="osoba/bytost"/>
        <xs:enumeration value="korporace"/>
        <xs:enumeration value="rod/rodina"/>
        <xs:enumeration value="dílo/výtvor"/>
        <xs:enumeration value="geografický objekt"/>
        <xs:enumeration value="událost"/>
        <xs:enumeration value="obecný pojem"/>
    </xs:restriction>
  </xs:simpleType>

<!-- podtřída -->
  <xs:simpleType name="podtridaTyp">
    <xs:annotation>
      <xs:documentation>Každá entita musí být zařazena do podtřídy, která je vymezena pro danou třídu.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
      <xs:enumeration value="autorská a umělecká díla"/>
      <xs:enumeration value="všeobecně známé dokumenty, smlouvy, zákony, předpisy, normy"/>
      <xs:enumeration value="vyznamenání, ceny, soutěžní trofeje"/>
      <xs:enumeration value="výrobky a jejich typová označení, obchodní značky, odrůdy, plemena vytvořená člověkem"/>
      <xs:enumeration value="názvy společenských, dětských her"/>
      <xs:enumeration value="programy, projekty, granty"/>
      <xs:enumeration value="stavby, trasy, zásahy do přírodních útvarů s vlastním jménem nebo jinou identifikací"/>
      <xs:enumeration value="administrativně či jinak lidmi vymezená území"/>
      <xs:enumeration value="administrativně vymezené části přírody"/>
      <xs:enumeration value="vymezené obvody a správní celky"/>
      <xs:enumeration value="geomorfologické útvary na dně moře"/>
      <xs:enumeration value="geomorfologické útvary na zemském povrchu"/>
      <xs:enumeration value="vodstvo a vodní plocha, vodní tok"/>
      <xs:enumeration value="pojmenované útvary"/>
      <xs:enumeration value="pojmenované trvalé klimatické jevy"/>
      <xs:enumeration value="Vesmír a jeho části"/>
      <xs:enumeration value="administrativně vymezená území s vlastní správou"/>
      <xs:enumeration value="orgány, organizační složky a příspěvkové organizace veřejné správy"/>
      <xs:enumeration value="sdružení organizací"/>
      <xs:enumeration value="vojenské a bezpečnostní jednotky"/>
      <xs:enumeration value="organizace založené za účelem podnikání"/>
      <xs:enumeration value="politické organizace"/>
      <xs:enumeration value="náboženské organizace a instituce"/>
      <xs:enumeration value="kulturní, výchovné, výzkumné a zdravotnické organizace a instituce"/>
      <xs:enumeration value="nadace a nadační fondy"/>
      <xs:enumeration value="profesní a zájmové organizace"/>
      <xs:enumeration value="spolky, společenské organizace"/>
      <xs:enumeration value="pojmenované části korporací"/>
      <xs:enumeration value="fyzická osoba"/>
      <xs:enumeration value="fiktivní fyzická osoba"/>
      <xs:enumeration value="bytost"/>
      <xs:enumeration value="zvíře"/>
      <xs:enumeration value="nepojmenované objekty a jejich fyzické části"/>
      <xs:enumeration value="kategorie a skupiny nepojmenovaných osob"/>
      <xs:enumeration value="kategorie a skupiny nepojmenovaných korporací"/>
      <xs:enumeration value="materiály a techniky"/>
      <xs:enumeration value="formy a žánry"/>
      <xs:enumeration value="systematická nomenklatura"/>
      <xs:enumeration value="abstraktní entity"/>
      <xs:enumeration value="organizované akce a události"/>
      <xs:enumeration value="ozbrojené střety (bitvy, války, obléhání…)"/>
      <xs:enumeration value="lidové zvyky, významné dny a svátky"/>
      <xs:enumeration value="dočasné přírodní jevy"/>
      <xs:enumeration value="rodina, rod"/>
      <xs:enumeration value="větev rodu"/>
      <xs:enumeration value="fiktivní rod"/>
    </xs:restriction>
  </xs:simpleType>

<!-- identifikace -->
  <xs:complexType name="identifikaceTyp">
    <xs:annotation>
       <xs:documentation>Entita musí mít uvedeno minimálně jedno identifikační číslo. Přimárně se uvádi identifikační číslo INTERPI (v případě prezentace záznamů ze znalostní báze INTERPI pro jiné systémy). V jiných případech, kdy je prezentován záznam jiného systému pro znalostní bázi INTEPRI musí záznam obsahovat jiný identifikátor (primárně standardní čísla, čísla národních systému a pod.). V nevyhnutných případech je možné jako jiný identifikátor uvést systémové číslo jiného spoluprajícího systému (instituce). Označení systému ze zapíše do příslušného prvku, jako typ identifikátoru se uvede "systémové číslo".</xs:documentation>
    </xs:annotation>
    <xs:sequence maxOccurs="1" minOccurs="1">
      <xs:element maxOccurs="unbounded" minOccurs="0" name="identifikator" type="identifikatorTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="identifikator_jiny" type="identifikator_jinyTyp"/>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="identifikatorTyp">
    <xs:annotation>
       <xs:documentation>Identifikační číslo INTERPI se uvádí povinně a je generováno systémem pro zpracování entit. Záznam může obsahovat více identifikačních čísel INTERPI, a to v případě, že nahrazuje jiný zrušený záznam (takéto identifikační číslo INTERPI sa označuje ako INTERPI alternativní).</xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="typ" type="identifikatorTypA" use="required"></xs:attribute>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:simpleType name="identifikatorTypA">
    <xs:annotation>
       <xs:documentation>Číselník typů identifikátorů INTERPI.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
        <xs:enumeration value="INTERPI"/>
        <xs:enumeration value="INTERPI alternativní"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="identifikator_jinyTyp">
    <xs:annotation>
       <xs:documentation>Entita může mít uvedeny identifikační čísla různých systému a to s ohledem na potřebu kooperece a sdílení dat. Alespoň jeden identifikátor je nutné uvést v případě, že není možné uvést identifikační číslo INTERPI (tj. v případě prezentace dat jiného systému pro INTERPI - zakládání nového záznamu).</xs:documentation>
    </xs:annotation>
    <xs:sequence minOccurs="0" maxOccurs="1">
      <xs:element maxOccurs="1" minOccurs="1" name="identifikator_cislo" type="xs:string"/>
      <xs:element maxOccurs="1" minOccurs="0" name="kooperujici_system" type="xs:string"/>
      <xs:element maxOccurs="1" minOccurs="0" name="druh_zaznamu" type="xs:string"/>
    </xs:sequence>
    <xs:attribute name="typ" type="identifikator_jinyTypA" use="required"></xs:attribute>
  </xs:complexType>

  <xs:simpleType name="identifikator_jinyTypA">
    <xs:annotation>
       <xs:documentation>Číselník typů jiných identifikátorů.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
        <xs:enumeration value="muzejní autority"/>
        <xs:enumeration value="národní autority"/>
        <xs:enumeration value="IČO"/>
        <xs:enumeration value="kód_cz"/>
        <xs:enumeration value="ČSÚ"/>
        <xs:enumeration value="SŠÚ"/>
        <xs:enumeration value="VIAF"/>
        <xs:enumeration value="ISNI"/>
        <xs:enumeration value="systémové číslo"/>
    </xs:restriction>
  </xs:simpleType>

<!-- záznam -->
  <xs:complexType name="zaznamTyp">
    <xs:annotation>
       <xs:documentation>Údaje o záznamu entity. Převážně služební informace včetně jazyku zpracování entity.</xs:documentation>
    </xs:annotation>
    <xs:sequence maxOccurs="1" minOccurs="1">
      <xs:element maxOccurs="1" minOccurs="1" name="stav" type="stavTyp"/>
      <xs:element maxOccurs="1" minOccurs="1" name="jazyk" type="jazykTyp"/>
      <xs:element maxOccurs="1" minOccurs="1" name="historie_zaznamu" type="historie_zaznamuTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="souhlas" type="souhlasTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="poznamka" type="poznamkaTyp"/>
    </xs:sequence>
  </xs:complexType>

<!-- stav záznamu entity -->
  <xs:simpleType name="stavTyp">
    <xs:annotation>
       <xs:documentation>Určuje stav zpracování entity podle žitovního cyklu záznamu.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
        <xs:enumeration value="rozpracovaný návrh"/>
        <xs:enumeration value="dokončený návrh"/>
        <xs:enumeration value="rozpracovaná revize"/>
        <xs:enumeration value="dokončená revize"/>
        <xs:enumeration value="schválený záznam"/>
        <xs:enumeration value="zrušený záznam"/>
        <xs:enumeration value="bez revize INTERPI"/>
    </xs:restriction>
  </xs:simpleType>

<!-- historie záznamu -->
  <xs:complexType name="historie_zaznamuTyp">
    <xs:annotation>
       <xs:documentation>Historie záznamu - přehled datací změn záznamu a zpracovatelů.</xs:documentation>
    </xs:annotation>
    <xs:sequence maxOccurs="1" minOccurs="1">
      <xs:element maxOccurs="unbounded" minOccurs="1" name="souvisejici_entita" type="souvisejiciZpracTyp"/>
      <xs:element maxOccurs="1" minOccurs="1" name="datace" type="presne_datumTyp"/>
    </xs:sequence>
  </xs:complexType>

  <xs:simpleType name="presne_datumTyp">
    <xs:restriction base="xs:string">
      <xs:pattern value="[0-9]{4}-[0-9]{2}-[0-9]{2}"/>
    </xs:restriction>
  </xs:simpleType>

<!-- souhlas s poskytnutím údajů -->
  <xs:complexType name="souhlasTyp">
    <xs:annotation>
       <xs:documentation>Do záznamu se ukládá informace o datu a formě poskytnutí souhlasu fyzické osoby se zpracováním osobních údajů v případě, že se souhlas vyžaduje.</xs:documentation>
    </xs:annotation>
    <xs:sequence maxOccurs="1" minOccurs="1">
      <xs:element maxOccurs="1" minOccurs="1" name="forma_poskytnuti" type="xs:string"/>
      <xs:element maxOccurs="1" minOccurs="1" name="datace" type="presne_datumTyp"/>
    </xs:sequence>
  </xs:complexType>

<!-- poznámka -->
  <xs:complexType name="poznamkaTyp">
    <xs:annotation>
       <xs:documentation>Poznámka k záznamu.</xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="typ" type="poznamkaTypA" use="required"></xs:attribute>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:simpleType name="poznamkaTypA">
    <xs:restriction base="xs:string">
        <xs:enumeration value="veřejná poznámka"/>
        <xs:enumeration value="neveřejná poznámka"/>
    </xs:restriction>
  </xs:simpleType>

<!-- označení -->
  <xs:complexType name="oznaceniTyp">
    <xs:annotation>
       <xs:documentation>Struktura označení entity. Označení je základní vlastnost každé entity. Rozlišuje se preferované a variantní označení. Každá entita musí mít určeno alespoň jedno označení. Označení se zapisují s ohledem na pravidla, podle kterých se vytváří. Označení se zapisuje také s ohledem na jeho časovou platnost a jazyk, ve kterém je zapsáno. Každá třída entit má určeno, které typy označení se považují za preferované a které za variantní. Pravidla pro tvorbu označení jsou uvedeny v Metodice.</xs:documentation>
    </xs:annotation>
    <xs:sequence maxOccurs="1" minOccurs="1">
      <xs:element maxOccurs="unbounded" minOccurs="1" name="pravidla" type="pravidlaTyp"/>
      <xs:element maxOccurs="1" minOccurs="1" name="hlavni_cast" type="hlavni_castTyp"/>
      <xs:element maxOccurs="1" minOccurs="0" name="vedlejsi_cast" type="vedlejsi_castTyp"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="doplnek" type="doplnekTyp"/>
      <xs:element maxOccurs="1" minOccurs="0" name="datace" type="xs:string"/>
      <xs:element maxOccurs="1" minOccurs="0" name="jazyk" type="jazykTyp"/>
      <xs:element maxOccurs="1" minOccurs="0" name="poznamka" type="xs:string"/>
      <xs:element maxOccurs="unbounded" minOccurs="0" name="cislo_zdroje" type="cislo_zdrojeTyp"/>
    </xs:sequence>
    <xs:attribute name="typ" type="oznaceni_typTypA" use="optional"></xs:attribute>
  </xs:complexType>

  <xs:simpleType name="oznaceni_typTypA">
    <xs:annotation>
       <xs:documentation>Typ označení je vymezen pro každou třídu entit.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
        <xs:enumeration value="úřední / skutečné / světské jméno / jméno za svobodna"/>
        <xs:enumeration value="jméno, pod nímž je entita nejvíce známá"/>
        <xs:enumeration value="akronym / zkratka"/>
        <xs:enumeration value="autorská šifra"/>
        <xs:enumeration value="pseudonym"/>
        <xs:enumeration value="církevní jméno"/>
        <xs:enumeration value="jméno získané sňatkem"/>
        <xs:enumeration value="historická podoba jména"/>
        <xs:enumeration value="přímé pořadí"/>
        <xs:enumeration value="jméno úřední"/>
        <xs:enumeration value="jméno preferované entitou"/>
        <xs:enumeration value="historická / dřívější forma jména"/>
        <xs:enumeration value="jediný známý tvar jména v daném období"/>
        <xs:enumeration value="uměle vytvořené označení"/>
        <xs:enumeration value="singulár"/>
        <xs:enumeration value="plurál"/>
        <xs:enumeration value="přejatý termín"/>
        <xs:enumeration value="zastaralý, historický termín"/>
        <xs:enumeration value="nevhodný termín"/>
        <xs:enumeration value="užší termín"/>
        <xs:enumeration value="odborný termín"/>
        <xs:enumeration value="invertovaná podoba"/>
        <xs:enumeration value="antonymum"/>
        <xs:enumeration value="homonymum"/>
    </xs:restriction>
  </xs:simpleType>

<!-- typ - forma hlavní části označení -->
  <xs:complexType name="hlavni_castTyp">
    <xs:annotation>
       <xs:documentation>Typ hlavní části označení - vymezené podle potřeby v konkrétní třídě. Určuje především formu zápisu označení.</xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="typ" type="hlavni_castTypA" use="optional"></xs:attribute>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:simpleType name="hlavni_castTypA">
    <xs:annotation>
       <xs:documentation>Číselník typů hlavní části označení.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
        <xs:enumeration value="příjmení"/>
        <xs:enumeration value="jméno"/>
        <xs:enumeration value="jurisdikce"/>
        <xs:enumeration value="nadřazená korporace"/>
        <xs:enumeration value="příme pořadí"/>
    </xs:restriction>
  </xs:simpleType>

<!-- typ - forma vedlejší části označení -->
  <xs:complexType name="vedlejsi_castTyp">
    <xs:annotation>
       <xs:documentation>Typ vedlejší části označení - vymezené podle potřeby v konkrétní třídě.</xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="typ" type="vedlejsi_castTypA" use="optional"></xs:attribute>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:simpleType name="vedlejsi_castTypA">
    <xs:annotation>
       <xs:documentation>Číselník typů hlavní části označení.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
        <xs:enumeration value="číselné označení"/>
        <xs:enumeration value="obsazení hudebního díla"/>
        <xs:enumeration value="tónina hudebního díla"/>
        <xs:enumeration value="údaj o aranžmá hudebního díla"/>
        <xs:enumeration value="název části díla/výtvoru"/>
    </xs:restriction>
  </xs:simpleType>

<!-- typ doplňku -->
  <xs:complexType name="doplnekTyp">
    <xs:annotation>
       <xs:documentation>Typ doplňku - vymezené podle potřeby v konkrétní třídě.</xs:documentation>
    </xs:annotation>
    <xs:simpleContent>
      <xs:extension base="xs:string">
        <xs:attribute name="typ" type="doplnekTypA" use="required"></xs:attribute>
      </xs:extension>
    </xs:simpleContent>
  </xs:complexType>

  <xs:simpleType name="doplnekTypA">
    <xs:annotation>
       <xs:documentation>Číselník typů doplňků.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
        <xs:enumeration value="rozpis iniciál"/>
        <xs:enumeration value="obecný doplněk"/>
        <xs:enumeration value="římské číslice"/>
        <xs:enumeration value="geografický doplněk"/>
        <xs:enumeration value="chronologický doplněk"/>
        <xs:enumeration value="pořadí události"/>
        <xs:enumeration value="jazyk díla"/>
        <xs:enumeration value="autor/tvůrce"/>
        <xs:enumeration value="pramen/zdroj"/>
        <xs:enumeration value="chronologický doplněk/verze díla"/>
    </xs:restriction>
  </xs:simpleType>

<!-- pravidla -->
  <xs:simpleType name="pravidlaTyp">
    <xs:annotation>
       <xs:documentation>Metodika tvorby znalostního modelu je průnikem různých pravidel využívaných v paměťových institucích. Pokud se pravidla pro formu zápisu konkrétních vlastností entit v jednotlivých komunitách odlišují natolik, že nebylo možné průnik najít, je možné uvést vlastnost tolikrát, kolik různých pohledů je potřeba vytvořit. V takovém případě se spolu s vlastností uvede i podle jakých pravidel byla vytvořena. Číselník podporovaných pravidel je možno rozšířit podle potřeb kooperace.</xs:documentation>
    </xs:annotation>
    <xs:restriction base="xs:string">
        <xs:enumeration value="INTERPI"/>
        <xs:enumeration value="AACR2"/>
        <xs:enumeration value="RDA"/>
        <xs:enumeration value="ZP"/>
        <xs:enumeration value="EUROVOC"/>
        <xs:enumeration value="PSH"/>
        <xs:enumeration value="ČTT"/>
    </xs:restriction>
  </xs:simpleType>

<!-- komplexní vztah - událost -->
  <xs:complexType name="udalostTyp">
    <xs:annotation>
       <xs:documentation>Událost představuje komplexní vztah v popisu entity. Je tvořena souborem propojení na jiné entity. Obvykle se odehrává na nějakém místě, za přítomnosti různých osob, v průběhu popsané události, s přičiněním korporace apod. Událost je tak tvořena propojením na více typů entit v různých rolích, datací a poznámkou.</xs:documentation>
