<!-- kódované údaje -->
  <xs:complexType name="kodovaneTyp">
    <xs:annotation>
       <xs:documentation>Kódované údaje se používají pro vyjádření entity pomocí standardizovaných kódů. Kódovaný údaj nemusí vystihovat entitu úplně přesně. Pokud je to možné, uvede se přesný kódovaných údaj, v jiném případě se zvolí kódovaný údaj pro širší oblast, která entitu zahrnuje.</xs:documentation>
    </xs:annotation>
     <xs:sequence maxOccurs="1" minOccurs="1">
      <xs:element maxOccurs="1" minOccurs="1" name="kod" type="xs:string"/>
      <xs:element maxOccurs="1" minOccurs="0" name="datace" type="xs:string"/>
      <xs:element maxOccurs="1" minOccurs="0" name="poznámka" type="xs:string"/>
