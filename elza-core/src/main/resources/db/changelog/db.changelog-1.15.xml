<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Verze 1.15 - pridani atributu ENUM; pridani tabulky arr_data_null; zmena ZP2015_LEVEL_TYPE na typ ENUM; odstraneni dat -->
    <changeSet id="16" author="slapa">

        <createTable tableName="arr_data_null">
            <column name="data_id" type="int">
                <constraints primaryKey="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint constraintName="fk_dataNull_data"
                                 baseTableName="arr_data_null"
                                 baseColumnNames="data_id"
                                 referencedTableName="arr_data"
                                 referencedColumnNames="data_id"
                                 onDelete="NO ACTION"/>

        <insert tableName="rul_data_type">
            <column name="data_type_id" value="12"/>
            <column name="code" value="ENUM"/>
            <column name="name" value="Výčet"/>
            <column name="description" value="Výčet"/>
            <column name="regexp_use" value="false"/>
            <column name="text_lenght_limit_use" value="false"/>
            <column name="storage_table" value="arr_data_null"/>
        </insert>

        <update tableName="db_hibernate_sequences">
            <column name="next_val" value="13"/>
            <where>sequence_name = 'rul_data_type|data_type_id'</where>
        </update>

        <!-- odstraneni soucasnych dat pro level -->
        <sql dbms="postgresql" splitStatements="true" stripComments="true">
            DELETE FROM arr_data_coordinates WHERE data_id IN (SELECT data_id FROM arr_data WHERE desc_item_id IN (SELECT desc_item_id FROM arr_desc_item WHERE desc_item_type_id = 7));
            DELETE FROM arr_data WHERE desc_item_id IN (SELECT desc_item_id FROM arr_desc_item WHERE desc_item_type_id = 7);
            DELETE FROM arr_desc_item WHERE desc_item_type_id = 7;
        </sql>

        <update tableName="rul_desc_item_type">
            <column name="data_type_id" value="12"/>
            <where>code = 'ZP2015_LEVEL_TYPE'</where>
        </update>

    </changeSet>
</databaseChangeLog>