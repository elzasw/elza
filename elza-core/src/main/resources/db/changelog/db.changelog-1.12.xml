<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <!-- Verze 1.12 - pridani sloupce uuid do tabulky arr_node -->
    <changeSet id="13" author="vanek">
        <addColumn tableName="arr_node">
            <column name="uuid" defaultValue="" type="varchar(512)" />
        </addColumn>

        <customChange class="cz.tacr.elza.dbchangelog.DbUpgrade1_12" />

        <addNotNullConstraint tableName="arr_node" columnName="uuid"/>
        <addUniqueConstraint columnNames="uuid" tableName="arr_node"/>
    </changeSet>
</databaseChangeLog>