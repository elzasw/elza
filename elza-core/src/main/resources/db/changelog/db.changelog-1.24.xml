<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

        <!--Verze 1.24 - Přidání vazby mezi rul_arrangement_type a rul_rule_set. -->
    <changeSet id="24" author="vanek" failOnError="true" runOnChange="false">
        <addColumn tableName="rul_arrangement_type">
            <column name="rule_set_id" type="int"  />
        </addColumn>

        <addForeignKeyConstraint constraintName="fk_rulSet_arrType"
                                 baseTableName="rul_arrangement_type"
                                 baseColumnNames="rule_set_id"
                                 referencedTableName="rul_rule_set"
                                 referencedColumnNames="rule_set_id"
                                 onDelete="NO ACTION"/>
                                 
        <update tableName="rul_arrangement_type">
            <column name="rule_set_id" valueNumeric="1"/>
        </update>     
                           
	    <addNotNullConstraint columnDataType="int"
	            columnName="rule_set_id"
	            tableName="rul_arrangement_type"/>                                    
    </changeSet>
</databaseChangeLog>