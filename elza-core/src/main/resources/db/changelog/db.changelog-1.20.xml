<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="21" author="slapa">

        <dropPrimaryKey tableName="arr_node_output"/>

        <addPrimaryKey columnNames="node_output_id" tableName="arr_node_output" />

        <dropColumn columnName="output_id" tableName="arr_node_output"/>

        <addColumn tableName="arr_node_output">
            <column name="named_output_id" type="int">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint constraintName="fk_node_output_named_output"
                                 baseTableName="arr_node_output"
                                 baseColumnNames="named_output_id"
                                 referencedTableName="arr_named_output"
                                 referencedColumnNames="named_output_id"
                                 onDelete="NO ACTION"/>

    </changeSet>

</databaseChangeLog>