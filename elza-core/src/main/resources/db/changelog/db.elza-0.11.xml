<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="201701191412" author="slapa">
        <dropTable cascadeConstraints="true"
                   tableName="rul_default_item_type"/>
    </changeSet>

    <changeSet id="201701171411" author="lebeda">
        <!-- Na MS SQL s constraintem nefunguje -->
        <dropUniqueConstraint tableName="arr_level" constraintName="u_arr_level_ppd"/>
    </changeSet>

    <changeSet id="20170127090300" author="slapa">
        <createTable tableName="arr_cached_node">
            <column name="cached_node_id" type="int">
                <constraints primaryKey="true"/>
            </column>
            <column name="node_id" type="int">
                <constraints nullable="false" foreignKeyName="fk_arr_cached_node_node" referencedTableName="arr_node"
                             referencedColumnNames="node_id"/>
            </column>
            <column name="data" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20170131084500" author="slapa">
        <addUniqueConstraint columnNames="node_id" tableName="arr_cached_node"/>
    </changeSet>

    <changeSet id="20170203110700" author="slapa">
        <modifyDataType
                columnName="code"
                newDataType="varchar(1000)"
                tableName="arr_dao_package" />
        <modifyDataType
                columnName="code"
                newDataType="varchar(1000)"
                tableName="arr_dao_batch_info" />
        <modifyDataType
                columnName="code"
                newDataType="varchar(1000)"
                tableName="arr_dao" />
        <modifyDataType
                columnName="code"
                newDataType="varchar(1000)"
                tableName="arr_dao_file" />
        <modifyDataType
                columnName="code"
                newDataType="varchar(1000)"
                tableName="arr_dao_file_group" />
    </changeSet>

    <changeSet id="20170203111700" author="slapa">
        <addColumn tableName="arr_request">
            <column name="external_system_code" type="varchar(1000)" />
        </addColumn>
    </changeSet>

    <changeSet id="20170206102800" author="slapa">
        <update tableName="db_hibernate_sequences">
            <column name="sequence_name" value="par_complement_type|complement_type_id" />
            <where>sequence_name = 'par_complement_type|par_complement_type_id'</where>
        </update>
    </changeSet>

    <changeSet id="20170207083044" author="lebeda">
        <addColumn tableName="sys_external_system">
            <column name="elza_code" type="varchar(50)"/>
        </addColumn>
    </changeSet>

    <changeSet id="20170208161823" author="vanek">
        <customChange class="cz.tacr.elza.dbchangelog.DbUpgrade_20170208161823" />
        <addUniqueConstraint constraintName="arr_packet_unique_col" tableName="arr_packet" columnNames="fund_id, storage_number, packet_type_id" />
    </changeSet>

</databaseChangeLog>
