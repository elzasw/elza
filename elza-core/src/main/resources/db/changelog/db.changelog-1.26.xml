<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="27" author="slapa">

        <dropColumn tableName="arr_packet" columnName="invalid_packet" />

        <addColumn tableName="arr_packet">
            <column name="state" defaultValue="OPEN" type="char(50)">
                <constraints nullable="false" />
            </column>
        </addColumn>

        <dropDefaultValue columnDataType="char(50)"
                          columnName="state"
                          tableName="arr_packet"/>

    </changeSet>

</databaseChangeLog>