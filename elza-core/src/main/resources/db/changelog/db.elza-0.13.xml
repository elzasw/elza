<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="201708211001" author="slapa">

        <addColumn tableName="arr_item">
            <column name="data_id" type="int" />
        </addColumn>

        <addForeignKeyConstraint constraintName="fk_item_data"
                                 baseTableName="arr_item"
                                 baseColumnNames="data_id"
                                 referencedTableName="arr_data"
                                 referencedColumnNames="data_id"
                                 onDelete="NO ACTION"/>

        <!-- Provede nastavení opačné vazby pro existující data -->
        <sql>UPDATE arr_item i SET data_id = (SELECT data_id FROM arr_data d WHERE item_id = i.item_id)</sql>

        <dropColumn tableName="arr_item" columnName="undefined" />
        <dropColumn tableName="arr_data" columnName="item_id" />

    </changeSet>

</databaseChangeLog>
