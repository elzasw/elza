<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="201706160001" author="ppytelka">
        <comment>Remove incorrect items from arr_cached_node table</comment>
        <!-- Expected SQL: delete from arr_cached_node where node_id in (select node_id from arr_cached_node where data like '%normalizedFrom":null%');
             -->
        <delete tableName="arr_cached_node">
            <where>node_id in (select node_id from arr_cached_node where data like '%normalizedFrom":null%')</where>
        </delete>
    </changeSet>

    <changeSet id="201706261004" author="slapa">
        <addColumn tableName="arr_item">
            <column name="undefined" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
