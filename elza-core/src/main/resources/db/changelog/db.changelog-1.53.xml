<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="54" author="slapa">

        <dropNotNullConstraint columnDataType="int" tableName="rul_rule" columnName="rule_set_id" />
        <dropColumn tableName="rul_rule" columnName="output_type_id" />

        <addColumn tableName="rul_output_type">
            <column name="rule_id" type="int" />
        </addColumn>

        <addForeignKeyConstraint constraintName="fk_output_type_rule"
                                 baseTableName="rul_output_type"
                                 baseColumnNames="rule_id"
                                 referencedTableName="rul_rule"
                                 referencedColumnNames="rule_id"
                                 onDelete="NO ACTION"/>

    </changeSet>

</databaseChangeLog>