{
    "compilerOptions": {
        "jsx": "react",
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        //"noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        //"noUnusedLocals": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": false
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "src/__tests__"
    ]
}

