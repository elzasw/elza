    <changeSet id="20200731143500" author="sergey.iryupin">
    	<sql dbms="postgresql">UPDATE arr_fund f SET fund_number = t1.value
			FROM (SELECT f.fund_id, dai.value AS value FROM arr_fund f
			JOIN arr_fund_version v ON v.fund_id = f.fund_id
			JOIN arr_desc_item di ON di.node_id = v.root_node_id
			JOIN arr_item i ON i.item_id = di.item_id
			JOIN rul_item_type t ON t.item_type_id = i.item_type_id
			JOIN arr_data_integer dai ON dai.data_id = i.data_id
			WHERE v.lock_change_id IS NULL AND i.delete_change_id IS NULL AND t.code = 'ZP2015_NAD') t1
		WHERE t1.fund_id = f.fund_id</sql>
	</changeSet>

    <changeSet id="20200803162500" author="sergey.iryupin">
    	<sql dbms="postgresql">UPDATE arr_fund f SET mark = t1.fund_number
			FROM (SELECT f.fund_id, das.value as fund_number FROM arr_fund f
			JOIN arr_fund_version v ON v.fund_id = f.fund_id
			JOIN arr_desc_item di ON di.node_id = v.root_node_id
			JOIN arr_item i ON i.item_id = di.item_id
			JOIN rul_item_type t ON t.item_type_id = i.item_type_id
			JOIN arr_data_string das ON das.data_id = i.data_id
			WHERE v.lock_change_id IS NULL AND i.delete_change_id IS NULL AND t.code = 'ZP2015_ZNACKA_FONDU') t1
		WHERE t1.fund_id = f.fund_id</sql>
