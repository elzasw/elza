<?xml version="1.0" encoding="UTF-8"?>
<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>distribution</id>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>

	<!-- Append files to packages directory -->
	<dependencySets>
		<dependencySet>
			<includes>
				<include>cz.tacr.elza:package-cz-base</include>
				<include>cz.tacr.elza:rules-cz-zp2015</include>
			</includes>
			<useTransitiveDependencies>false</useTransitiveDependencies>
			<unpack>false</unpack>
			<outputDirectory>packages</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
	</dependencySets>


	<moduleSets>
		<!-- Append ROOT.war -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>cz.tacr.elza:elza-war</include>
			</includes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<outputDirectory>server</outputDirectory>
				<unpack>false</unpack>
				<outputFileNameMapping>ROOT.${module.extension}</outputFileNameMapping>
			</binaries>
		</moduleSet>
		<!-- Append all-institutions-import.xml -->
		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>cz.tacr.elza:package-cz-base</include>
			</includes>
			<sources>
				<includeModuleDirectory>false</includeModuleDirectory>
				<fileSets>
					<fileSet>
						<outputDirectory>data</outputDirectory>
						<includes>
							<include>all-institutions-import.xml</include>
						</includes>
						<directory>src</directory>
					</fileSet>
				</fileSets>
			</sources>
		</moduleSet>
	</moduleSets>

	<fileSets>
		<fileSet>
			<excludes>
				<exclude>distribution.xml</exclude>
			</excludes>
			<directory>src/assembly</directory>
			<outputDirectory />
		</fileSet>
	</fileSets>
</assembly>
